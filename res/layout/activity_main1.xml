<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity1"
    android:id="@+id/rlayout1" 
    android:background="@drawable/home_screen"
    
    >

    <Button
        android:id="@+id/btn_howto"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="33dp"
        android:layout_marginTop="155dp"
        android:text="@string/bttn_howto" 
     	android:background="#ffff00"/>

    <Button
        android:id="@+id/btn_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/btn_howto"
        android:layout_below="@+id/btn_howto"
        android:layout_marginRight="16dp"
        android:layout_marginTop="36dp"
        android:background="#ffff00"
        android:text="@string/bttn_play" />

    <Button
        android:id="@+id/btn_exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_howto"
        android:layout_below="@+id/btn_play"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="39dp"
        android:background="#ffff00"
        android:text="@string/bttn_exit" />

</RelativeLayout>
