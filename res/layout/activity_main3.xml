<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity3" 
    android:background="@drawable/game_screen">

    <Button
        android:id="@+id/btn_game2"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btn_game1"
        android:layout_centerHorizontal="true"
        android:background="@drawable/image_two" />

    <Button
        android:id="@+id/btn_game1"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginRight="37dp"
        android:layout_marginTop="92dp"
        android:layout_toLeftOf="@+id/btn_game2"
        android:background="@drawable/image_one" />

    <Button
        android:id="@+id/btn_game3"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btn_game2"
        android:layout_alignBottom="@+id/btn_game2"
        android:layout_alignParentRight="true"
        android:layout_marginRight="40dp"
        android:background="@drawable/image_three" />

    <Button
        android:id="@+id/btn_9"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_game1"
        android:layout_below="@+id/btn_game1"
        android:layout_marginTop="14dp"
        android:background="@drawable/image_nine" />

    <Button
        android:id="@+id/btn_5"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btn_9"
        android:layout_centerHorizontal="true"
        android:background="@drawable/image_five" />

    <Button
        android:id="@+id/btn_7"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btn_5"
        android:layout_alignLeft="@+id/btn_game3"
        android:background="@drawable/image_seven" />

    <Button
        android:id="@+id/btn_4"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_9"
        android:layout_below="@+id/btn_9"
        android:layout_marginTop="14dp"
        android:background="@drawable/image_four" />

    <Button
        android:id="@+id/btn_8"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btn_4"
        android:layout_centerHorizontal="true"
        android:background="@drawable/image_eight" />

    <Button
        android:id="@+id/btn_6"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btn_8"
        android:layout_alignLeft="@+id/btn_7"
        android:background="@drawable/image_six" />

</RelativeLayout>
